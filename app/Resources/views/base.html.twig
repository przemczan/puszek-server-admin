<!DOCTYPE html>
<html>
<head>

    <title>Puszek Server Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block stylesheets %}
        {% stylesheets filter='cssrewrite' output="assets/compiled/vendors.css"
            '@angular_material_css'
            '@PuszekPuszekAdminAdminBundle/Resources/public/components/angular-material/themes/*.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% stylesheets filter='lessphp,cssrewrite' output="assets/compiled/main.css"
            '@PuszekPuszekAdminAdminBundle/Resources/public/css/main.less'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}

</head>

<body data-ng-app="puszekApp" data-ng-controller="mainController as main" layout="horizontal"
      ng-class="{ 'page-lg': $mdMedia('lg'), 'page-md': $mdMedia('md') && !$mdMedia('lg'), 'page-sm': $mdMedia('sm') && !$mdMedia('md') && !$mdMedia('lg') }">

    <div layout="vertical" layout-fill md-theme="default">
        <md-toolbar class="md-whiteframe-z1 main-header">
            <md-button class="md-fab" ng-click="main.menuToggle()">
                <p-icon src="/views/icons/ic_menu_24px.svg"></p-icon>
            </md-button>
            <h2 class="md-toolbar-tools" ui-view="contentHeader"></h2>
        </md-toolbar>
        <section layout="horizontal" flex>
            <md-sidenav layout="vertical" role="navigation" class="md-sidenav-left md-whiteframe-z2"
                        p-include="/views/commons/mainMenu.html" is-locked-open="main.menuOpen"
                        component-id="mainMenu">
            </md-sidenav>
            <md-content scroll-y flex ui-view="content"></md-content>
        </section>
    </div>

    <div data-ng-http-loader data-template="{{ app.request.basePath }}/views/commons/loader.html"></div>
    <div id="notification" ng-include="'{{ app.request.basePath }}/views/commons/notification.html'"></div>

    {% block javascripts %}
        {% javascripts output="assets/compiled/main.js"
            '@jquery_js'
            '@underscore_js'
            '@angular_js'
            '@angular_animate_js'
            '@angular_aria_js'
            '@hammerjs_js'
            '@angular_route_js'
            '@angular_ui_router_js'
            '@restangular_js'
            '@angular_material_js'

            '@PuszekPuszekAdminAdminBundle/Resources/public/js/vendor/*'
            '@PuszekPuszekAdminAdminBundle/Resources/public/js/app.js'
            '@PuszekPuszekAdminAdminBundle/Resources/public/js/commons/modal/*'
            '@PuszekPuszekAdminAdminBundle/Resources/public/js/commons/*'
            '@PuszekPuszekAdminAdminBundle/Resources/public/js/auth/*'
            '@PuszekPuszekAdminAdminBundle/Resources/public/js/crud/*'
            '@PuszekPuszekAdminAdminBundle/Resources/public/js/main/*'
            '@PuszekPuszekAdminAdminBundle/Resources/public/js/mainMenu/*'
            '@PuszekPuszekAdminAdminBundle/Resources/public/js/dashboard/*'
            '@PuszekPuszekAdminAdminBundle/Resources/public/js/clients/*'
        %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <script>
            angular.module('puszekApp').constant('Config', {
                baseUrl: '{{ app.request.baseUrl }}',
                basePath: '{{ app.request.basePath }}'
            });
        </script>
    {% endblock %}
</body>
</html>
